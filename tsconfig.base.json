{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "API Typed",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2018",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "esModuleInterop": true
  }
}
